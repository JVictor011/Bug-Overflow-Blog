<%-include('../../partials/header.ejs')%>
<%-include('../../partials/homeNavbar.ejs')%>
<body>
  <div class="container">
    <%result.articles.rows.forEach((article) => {%>
    <br />
    <div class="card text-center">
      <div class="card-header">Username</div>
      <div class="card-body">
        <h5 class="card-title"><%=article.title%></h5>
        <br />
        <a href="/<%=article.slug%>" class="btn btn-primary" id="btn-padrao"
          >Ler artigo</a
        >
      </div>
      <div class="card-footer text-muted">
        Ultima atualização: <%=new
        Date(article.updatedAt).toLocaleDateString('pt-BR', optionsFormar)%>
      </div>
    </div>
    <%})%>
    <br />
    <div class="row">
      <div class="col col-12">
        <%if(result.next){%>
        <a href="/articles/page/<%=result.page+1%>" id="nextIndex">Next >>></a>
        <%}%> <%if(result.page > 2){%>
        <a href="/articles/page/<%=result.page-1%>" id="prevIndex"><<< Prev</a>
        <%}else if(result.page == 2){%>
        <a href="/" id="prevIndex"><<< Prev</a>
        <%}%>
      </div>
    </div>
  </div>
  <br />
</body>
<%-include('../../partials/footer.ejs')%>
